<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="268.0" spacing="10" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MachineInputController">
    <Label text="Nova Máquina">
      <font>
         <Font size="18.0" />
      </font></Label>
    <TextField fx:id="txtNameMachine" alignment="CENTER" promptText="Nome da Máquina" />
    <TextField fx:id="txtValueMachine" alignment="CENTER" promptText="Valor Máquina" />
   <TextField fx:id="txtUsefulLife" alignment="CENTER" promptText="Vida útil" />
    <TextField fx:id="txtResidualValue" alignment="CENTER" promptText="Valor residual" />
   <TextField fx:id="txtLaserValue" alignment="CENTER" promptText="Valor Laser" />
   <TextField fx:id="txtLaserUsefulLife" alignment="CENTER" promptText="Vida útil Laser" />
    <Button onAction="#addMachine" prefHeight="26.0" prefWidth="145.0" text="Salvar">
      <font>
         <Font size="18.0" />
      </font></Button>
</VBox>
