<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="184.0" prefWidth="268.0" spacing="10" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MaterialInputController">
    <Label text="Novo Material">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <TextField fx:id="txtMaterialName" alignment="CENTER" promptText="Nome Material" />
    <TextField fx:id="txtPriceMaterial" alignment="CENTER" promptText="Preço m²" />
    <Button onAction="#addMaterial" prefHeight="26.0" prefWidth="145.0" text="Salvar">
        <font>
            <Font size="18.0" />
        </font>
    </Button>
</VBox>
